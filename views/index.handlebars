<h1>Eat-da-Burger!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{this.hbsObject devoured=true}}</li>
    {{/unless}}
  {{/each}}
</ul>


<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{this.hbsObject devoured=false}}</li>
    {{/if}}
  {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked>Devoured!<br>
    <input type="radio" name="devoured" value="0">Eat the Burger.
  </div>

  <button type="submit">Add Burger</button>
</form>