<div class="container">
  <div class="row center">
    <div class="col-sm-12 text-center">
      <h1>Eat-da-Burger!</h1>
      <img src="/assets/img/burger.png" alt="spongebob to the rescue">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <h2>Burgers ready to be eaten!</h2>
      <br>
        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="col-sm-6">
      <h2>Burgers already devoured!</h2>
      <br>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col">
      <h2>Add a Burger</h2>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <div class="form-group">
          <input type="checkbox" name="devoured" value="0">Try it out!.
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>